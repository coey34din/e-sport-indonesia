<section class="arsipblog">
    <div class="wrapper">
        {% set postslist = collections.posts %}

        <div class="blok-post-list">
            <div class="content-title-element">
                <div class="title">
                    Blog <span>&amp; Videos</span>
                </div>
                <div class="description">
                    Lorem ipsum dolor sit amet consectetur adipiscing elit.
                </div>
            </div>          
            {% set a = 0 %}
            {% for post in postslist | reverse %}
            
            {% if a < 3 %}
                {%set a = a + 1 %}
                <aside {% if post.url == url %} data-current="current item"{% endif %} class="post-list-styles">
                    <div class="image">
                        {% if post.data.thumbnail %}
                            <img src="{{ url }}{{ post.data.thumbnail }}">
                            {% else %}
                                <img  src="{{ '/' | url }}static/img/no-image.png">
                        {% endif %}		
                    </div>
                    <h3 class="title">
                            {% if post.data.title %}                                             	
                                {{ post.data.title }}
                            {% else %}
                                Untitled
                            {% endif %}
                    </h3>	
                    {% if post.data.summary %}
                        <div class="excerpt">
                            {{ post.data.summary }}
                        </div>
                    {% endif %}
                    <div class="bottom">
                        <a href="{{ post.url | url }}" title="Top 10 eSport Players" class="more-button">More</a>
                        <ul class="post-information">
                            <li class="date">                            
                                <time datetime="{{ post.date | machineDate }}">
                                    <small>{{ post.date | readableDate }} </small>
                                </time>
                            </li>
                            <li class="comment">                            
                                by {{ metadata.author.name }}
                            </li>
                        </ul>
                    </div>
                                            
                </aside>
            {% endif %}
            {% endfor %}
        </div>
    </div>
</section>