{# Site #}
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{% if meta_title %}{{ meta_title }}{% else %}{{ title }}{% endif %} | {{ site.name }}</title>
<meta name="description" content="{% if meta_description %}{{ meta_description }}{% else %}{{ excerpt }}{% endif %}">
<link rel="canonical" href="{{ site.url }}{{ page.url }}">

{# Google Schema #}
<meta itemprop="name" content="{% if meta_title %}{{ meta_title }}{% else %}{{ title }}{% endif %} | {{ site.name }}">
<meta itemprop="description" content="{% if meta_description %}{{ meta_description }}{% else %}{{ excerpt }}{% endif %}">

{# Twitter #}
<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="{% if meta_title %}{{ meta_title }}{% else %}{{ title }}{% endif %} | {{ site.name }}">
<meta name="twitter:description" content="{% if meta_description %}{{ meta_description }}{% else %}{{ excerpt }}{% endif %}">
<meta name="twitter:site" content="{{ site.author.handle }}">
<meta name="twitter:creator" content="{{ site.author.handle }}">
<meta name="twitter:image:src" content="{{ site.url }}{{ site.images.twitter }}">

{# Open Graph #}
<meta property="og:title" content="{% if meta_title %}{{ meta_title }}{% else %}{{ title }}{% endif %} | {{ site.name }}">
<meta property="og:description" content="{% if meta_description %}{{ meta_description }}{% else %}{{ excerpt }}{% endif %}">
<meta property="og:image" content="{{ site.url }}{{ site.images.og }}">
<meta property="og:image" content="{{ article_image }}">
<meta property="og:image:secure_url" content="{{ article_image }}">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
<meta property="og:site_name" content="{{ site.name }}">
<meta property="og:locale" content="id_ID">
<meta property="og:type" content="website">
<meta property="article:section" content="{{ navtitle }}">
<meta property="article:published_time" content="{{ date }}">
<meta property="article:modified_time" content="{{ modified_date }}">
<meta property="og:updated_time" content="{{ modified_date }}">

 {% if tags %}
      {% for tag in tags %}
        {%- if tag != "nav" -%}
            <meta property="article:tag" content="{{ tag }}">
        {%- endif -%}
      {% endfor %}
  {% endif %}
  <meta property="fb:admins" content="Facebook numberic ID" > 
